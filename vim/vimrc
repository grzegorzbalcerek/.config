
set nocompatible

set autoread
set autowrite
set backspace=indent,eol,start
set clipboard=unnamed
set cursorline
set encoding=utf-8
set expandtab
set foldmethod=marker
set guicursor=a:block
set hidden
set nohlsearch
set ignorecase
set incsearch
set mouse=a
set number
set path=.,~/.config/**,~/lib,~/doc/**,~/rep/zk/zkvault,~/rep/rbs/**,,
set relativenumber
set ruler

set shiftwidth=4
set showcmd
set showmode
set smartcase
set nosmarttab
set softtabstop=-1
set noswapfile
set textwidth=0
set wildmenu


syntax on
filetype plugin indent on

let mapleader=" "

map <leader>h :set hlsearch!<CR>
map <leader>w :write<CR>
map <leader>r :set wrap!<CR>

map <M-Left> <C-W>h
map <M-Down> <C-W>j
map <M-Up> <C-W>k
map <M-Right> <C-W>l

map <S-Left> zl
map <S-Down> <C-Y>
map <S-Up> <C-E>
map <S-Right> zh

map <C-M-Left> :bprev<CR>
map <C-M-Down> :ls<CR>
map <C-M-Up> :Explore<CR>
map <C-M-Right> :bnext<CR>

map <C-S-M-Left> :vertical :resize -1<CR>
map <C-S-M-Down> :resize -1<CR>
map <C-S-M-Up> :resize +1<CR>
map <C-S-M-Right> :vertical :resize +1<CR>

imap <C-B> <C-o>0
imap <C-F> <C-o>$

