
set nocompatible

set backspace=indent,eol,start
set cursorline
set encoding=utf-8
set expandtab
set foldmethod=marker
set guicursor=a:block
set hidden
set hlsearch
set ignorecase
set incsearch
set mouse=a
set number
set path=.,~/.config/**,~/lib,~/doc/**,~/rep/rbs/**,,
set relativenumber
set ruler
set shiftwidth=4
set showcmd
set showmode
set smartcase
set nosmarttab
set softtabstop=-1
set noswapfile
set textwidth=100
set wildmenu


syntax on
filetype plugin indent on

let mapleader=" "

map <leader>h :nohlsearch<CR>
map <leader>s :write<CR>
map <leader>w :set wrap!<CR>
